<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Create Account</title>
</head>

<body class="bg-zinc-900 text-white p-10">

<h3 class="text-3xl mb-5">Create Account</h3>

<form id="userForm" class="space-y-3 max-w-md">
    <input class="w-full px-3 py-2 rounded-md bg-transparent border-2 border-zinc-800" type="text" placeholder="name" name="name" required />
    <input class="w-full px-3 py-2 rounded-md bg-transparent border-2 border-zinc-800" type="text" placeholder="username" name="username" required />
    <input class="w-full px-3 py-2 rounded-md bg-transparent border-2 border-zinc-800" type="email" placeholder="email" name="email" required />
    <input class="w-full px-3 py-2 rounded-md bg-transparent border-2 border-zinc-800" type="number" placeholder="age" name="age" required />

    <button type="submit" class="px-5 py-2 rounded-md bg-blue-500 hover:bg-blue-600">
        Submit
    </button>
</form>

<!-- Search Bar -->
<input 
  id="searchInput" 
  type="text" 
  placeholder="Search..." 
  class="w-full max-w-md mt-8 px-3 py-2 rounded-md bg-transparent border-2 border-zinc-700"
/>

<!-- Cards Rendering -->
<div id="cardsContainer" class="mt-10 space-y-4"></div>

<script>
    let users = [];
    let editIndex = null;

    const form = document.getElementById("userForm");
    const cardsContainer = document.getElementById("cardsContainer");
    const searchInput = document.getElementById("searchInput");

    form.addEventListener("submit", function (e) {
        e.preventDefault();
        const formData = new FormData(form);
        const user = Object.fromEntries(formData.entries());
        if (editIndex !== null) {
            users[editIndex] = user;
            editIndex = null;
        } else {
            users.push(user);
        }
        form.reset();
        renderCards();
    });
    searchInput.addEventListener("input", renderCards);
    function renderCards() {
        cardsContainer.innerHTML = "";
        const searchText = searchInput.value.toLowerCase();
        const filteredUsers = users.filter(user =>
            Object.values(user).some(val =>
                String(val).toLowerCase().includes(searchText)
            )
        );
        filteredUsers.forEach((user, index) => {
            const card = document.createElement("div");
            card.className = "border border-zinc-700 p-5 rounded-lg bg-zinc-800";

            card.innerHTML = `
                <h4 class="text-xl font-semibold">${user.name}</h4>
                <p><strong>Username:</strong> ${user.username}</p>
                <p><strong>Email:</strong> ${user.email}</p>
                <p><strong>Age:</strong> ${user.age}</p>
                <div class="flex gap-4 mt-3">
                    <button class="text-yellow-400 hover:text-yellow-300" onclick="editUser(${users.indexOf(user)})">âœï¸ Edit</button>
                    <button class="text-red-400 hover:text-red-300" onclick="deleteUser(${users.indexOf(user)})">ğŸ—‘ï¸ Delete</button>
                </div>
            `;
            cardsContainer.appendChild(card);
        });
    }
    function deleteUser(index) {
        users.splice(index, 1);
        renderCards();
    }

    function editUser(index) {
        const user = users[index];
        editIndex = index;

        Object.keys(user).forEach(key => {
            form.elements[key].value = user[key];
        });
    }
</script>

</body>
</html>



